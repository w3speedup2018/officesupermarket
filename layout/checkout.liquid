    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
	<div class="custom-header">
		<div class="wrap">		
			<div>
				{{ content_for_logo }}
			</div>
			<div class="custom-header__secure">
				<svg xmlns="http://www.w3.org/2000/svg" width="18" height="20" viewBox="0 0 18 20" fill="none">
					<path d="M3.125 7.5V5.625C3.125 2.51836 5.64453 0 8.75 0C11.8555 0 14.375 2.51836 14.375 5.625V7.5H15C16.3789 7.5 17.5 8.62109 17.5 10V17.5C17.5 18.8789 16.3789 20 15 20H2.5C1.11914 20 0 18.8789 0 17.5V10C0 8.62109 1.11914 7.5 2.5 7.5H3.125ZM5.625 7.5H11.875V5.625C11.875 3.89922 10.4766 2.5 8.75 2.5C7.02344 2.5 5.625 3.89922 5.625 5.625V7.5Z" fill="#23AF3A"/>
				</svg>
				<h2>Secure Checkout</h2>
			</div>
		</div>
	</div>
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            
			{% include 'checkout-breadcrumbs' %}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
			<div class="custom-usp">
				<div class="custom-usp__item">
					<img src="{{ 'delivery-truck.png' | asset_img_url }}" />
					<span class="custom-usp__item-title">Free Delivery</span>
					<span>On Orders<br/>Over Â£250</span>
				</div>
				<div class="custom-usp__item">
					<img src="{{ 'payment-card.png' | asset_img_url }}" />
					<span class="custom-usp__item-title">Price Match</span>
					<span>Found it cheaper?<br/>We will match it</span>
				</div>
				<div class="custom-usp__item">
					<img src="{{ 'users.png' | asset_img_url }}" />
					<span class="custom-usp__item-title">Bulk Discounts</span>
					<span>Contact us for the<br/>best price</span>
				</div>
			</div>
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}
  
  	{% style %}
		body {
			background: #ffffff;
		}
		.sidebar::after {
			background-color: #F4F9FC;
		}
		.custom-header {
			display:none;
		}
		.custom-header .wrap {
			display: flex;
			align-items: center;
			justify-content: space-between;
		}
		.custom-header .wrap::before {
			display:none;
		}
		.custom-header .wrap::after {
			display:none;
		}
		.custom-header__secure {
			color: #23AF3A;
			font-weight: 700;
			font-size: 20px;
			line-height: 1.5;
			display: flex;
			align-items: center;
			gap: 15px;
		}

		.order-summary__section~.order-summary__section {
			border-color: #BCE3FD;
		}
		.sidebar .total-line-table__tbody+.total-line-table__tbody .total-line:first-child th::before, .sidebar .total-line-table__tbody+.total-line-table__tbody .total-line:first-child td::before, .sidebar .total-line-table__tbody+.total-line-table__footer .total-line:first-child th::before, .sidebar .total-line-table__tbody+.total-line-table__footer .total-line:first-child td::before {
			background-color: #BCE3FD;
		}
		.sidebar .order-summary__small-text {
			color: #2280BF;
		}
		.sidebar, .sidebar .payment-due__price {
			color: #173760;
		}
		.sidebar .order-summary__emphasis {
			color: #306A90;
		}
		.sidebar .total-line-table__tbody .order-summary__emphasis, .sidebar .total-line-table__tbody .order-summary__small-text {
			color: #173760;
		}

		.sidebar .payment-due__currency {
			color: #2280BF;
			background-color: #BCE3FD;
			border-radius: 6px;
			padding: 1px 4px;
		}

		.custom-usp {
			display: flex;
			align-items: center;
			justify-content: space-between;
			border-top: 1px solid #BCE3FD;
			border-bottom: 1px solid #BCE3FD;
			padding: 28px 0;
		}
		.custom-usp__item {
			text-align: center;
		}
		.custom-usp__item img {
			padding-bottom: 16px;
		}
		.custom-usp__item-title {
			padding-bottom: 7px;
			color: #306A90;
			font-weight: 600;
			font-size: 16px;
		}
		.custom-usp__item span {
			display: block;
			font-size: 12px;
			color: #2280BF;
		}
		.btn {
			background-color: #23AF3A;
		}
		.btn:hover {
			background-color: #23AF3A;
		}
		@media only screen and (min-width: 1000px) {
			.custom-header {
				display: block;
				background-color: #ffffff;
				padding: 40px 0;
				border-bottom: 1px solid #BCE3FD;
			}
			.sidebar::after {
				-webkit-box-shadow: 1px 0 0 #BCE3FD inset;
				box-shadow: 1px 0 0 #BCE3FD inset;
			}
			.order-summary__section--product-list::after {
				background-color: #BCE3FD;
			}
			.order-summary__sections {
				height: auto;
			}
		}
		

	{% endstyle %}
	</body>
</html>
